@model IEnumerable<ProjetNichoir.Models.Nichoir>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emplacement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date_ajout)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.statut_batterie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.statut_pir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.statut_led_ir)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.resolution_camera)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emplacement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_ajout)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.statut_batterie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.statut_pir)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.statut_led_ir)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resolution_camera)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_nichoir">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_nichoir">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_nichoir">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

    .modal-open-body {
        overflow: hidden;
    }

    .photo-viewer-modal {
        display: none;
        position: fixed;
        z-index: 1000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.9);
        justify-content: center;
        align-items: center;
    }

    .viewer-content {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        max-width: 90%;
        /* Hauteur pour que la modale tienne l'image ET les détails */
        max-height: 90vh;
    }

    /* Conteneur Master pour forcer l'alignement vertical Image + Détails */
    .image-details-master-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        max-width: 80vw;
        max-height: 90vh;
        position: relative;
    }

